# ============================================================================
# Zurg Monitor - Environment Variables Sample
# ============================================================================
# Copy this file to .env and customize for your setup
# cp .env.sample .env
# ============================================================================

# ============================================================================
# ZURG CONNECTION SETTINGS
# ============================================================================

# Zurg server URL
# If Zurg is in the same Docker network, use: http://zurg:9999
# If Zurg is on host machine, use: http://host.docker.internal:9999
# If Zurg is on another machine, use: http://IP:9999
ZURG_URL=http://zurg:9999

# Authentication (leave empty if not required)
ZURG_USERNAME=riven
ZURG_PASSWORD=12345

# ============================================================================
# MONITORING SETTINGS
# ============================================================================

# Check interval in minutes (how often to check for broken torrents)
CHECK_INTERVAL=30

# Rate limiting (requests before backing off)
RATE_LIMIT=10

# ============================================================================
# USER/GROUP SETTINGS (for Docker)
# ============================================================================

# Set these to match your user/group IDs
# To find your IDs, run: id -u (for PUID) and id -g (for PGID)
PUID=1000
PGID=1000

# ============================================================================
# RUNTIME OPTIONS
# ============================================================================

# Run once and exit (true/false)
# Set to true for testing, false for continuous monitoring
RUN_ONCE=false

# Enable verbose logging (show INFO messages) (true/false)
VERBOSE=false

# Enable debug logging (true/false)
DEBUG=false

# Enable trace logging - very verbose (true/false)
TRACE=false

# Dry run mode - don't actually trigger repairs (true/false)
DRY_RUN=false

# ============================================================================
# TIMEZONE
# ============================================================================

# Set your timezone (for correct log timestamps)
# Examples: America/New_York, Europe/London, Asia/Tokyo, etc.
TZ=UTC

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Values in this file will be used by docker-compose
# 2. These can also be overridden in docker-compose.yml
# 3. Boolean values should be lowercase (true/false)
# 4. Remove or comment out values you don't need
# 5. Never commit .env file with real passwords to version control
#
# ============================================================================